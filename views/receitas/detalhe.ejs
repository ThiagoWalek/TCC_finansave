<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <%- include('../partials/head') %>
    <title>Detalhe da Receita - Finansave</title>
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container py-4">
        <div class="form-page">
            <div class="form-card">
                <div class="form-header d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="h3 mb-0">Detalhe da Receita</h1>
                        <p class="text-muted mb-0">Visualize informações completas desta receita</p>
                    </div>
                    <div class="d-flex gap-2">
                        <a href="/receitas/editar/<%= receita.receita_id %>" class="btn btn-outline-secondary">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <form method="POST" action="/receitas/excluir/<%= receita.receita_id %>" onsubmit="return confirm('Tem certeza que deseja excluir esta receita?')">
                            <button type="submit" class="btn btn-outline-danger">
                                <i class="fas fa-trash"></i> Excluir
                            </button>
                        </form>
                    </div>
                </div>

                <%- include('../partials/messages') %>

                <div class="card p-3">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div>
                            <h5 class="mb-1"><%= receita.descricao %></h5>
                            <div class="expense-amount">R$ <%= parseFloat(receita.valor).toFixed(2).replace('.', ',') %></div>
                        </div>
                        <span class="badge expense-category category-<%= receita.categoria %>">
                            <%= receita.categoria %>
                        </span>
                    </div>

                    <div class="card-info mb-2">
                        <i class="fas fa-credit-card"></i>
                        <%= receita.Conta ? receita.Conta.nome : 'Conta não encontrada' %>
                    </div>

                    <div class="text-muted mb-2">
                        <i class="fas fa-calendar-alt"></i>
                        <%= new Date(receita.data_receita).toLocaleDateString('pt-BR') %>
                    </div>

                    <% if (receita.observacoes) { %>
                        <div class="mt-2">
                            <small class="text-muted">
                                <i class="fas fa-sticky-note me-1"></i>
                                <%= receita.observacoes %>
                            </small>
                        </div>
                    <% } %>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-3">
                    <a href="/receitas/extrato" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left"></i> Voltar ao Extrato
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/main.js"></script>
</body>
</html>