<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <%- include('../partials/head') %>
    <title>Nova Transferência - Finansave</title>
    <style>
        .form-container {
            max-width: 600px;
            margin: 2rem auto;
            padding: 2rem;
            background: var(--surface);
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }
        .form-title {
            color: #2c3e50;
            margin-bottom: 1.5rem;
        }
        .account-balance {
            font-size: 0.9rem;
            color: #6c757d;
            margin-top: 0.25rem;
        }
    </style>
</head>
<body class="bg-light">
    <%- include('../partials/navbar') %>

    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="form-container">
                    <h2 class="form-title text-center">Nova Transferência</h2>

                    <div class="d-flex justify-content-center mb-3" role="tablist" aria-label="Tipo de transferência">
                        <button type="button" id="btnEnvio" class="btn btn-outline-primary me-2" aria-selected="true">Enviar</button>
                        <button type="button" id="btnRecebimento" class="btn btn-outline-success">Receber</button>
                    </div>

                    <%- include('../partials/messages') %>

                    <form action="/transferencias/criar" method="POST" class="needs-validation" novalidate>
                        <input type="hidden" id="direcao" name="direcao" value="<%= initialDirecao %>">
                        <!-- Conta de Origem -->
                        <div class="mb-3">
                            <label for="conta_origem_id" class="form-label" id="labelConta">Conta de Origem</label>
                            <select class="form-select" id="conta_origem_id" name="conta_origem_id" required>
                                <option value="">Selecione a conta de origem</option>
                                <% contas.forEach(function(conta) { %>
                                    <option value="<%= conta.conta_id %>" data-saldo="<%= conta.saldo_atual %>">
                                        <%= conta.nome %>
                                    </option>
                                <% }); %>
                            </select>
                            <div class="account-balance" id="saldo-origem"></div>
                            <div class="invalid-feedback">Por favor, selecione a conta de origem.</div>
                        </div>

                        <!-- Nome do Destino (opcional) -->
                        <div class="mb-3">
                            <label for="nome_conta_destino" class="form-label" id="labelNomeDestino">Nome do Destino (opcional)</label>
                            <input type="text" class="form-control" id="nome_conta_destino" name="nome_conta_destino" maxlength="50" placeholder="Ex: Carteira, Banco X, João" />
                            <small class="form-text text-muted" id="hintNome">Preencha com o nome para onde foi transferido (se desejar).</small>
                        </div>

                        <!-- Valor -->
                        <div class="mb-3">
                            <label for="valor" class="form-label">Valor da Transferência</label>
                            <div class="input-group">
                                <span class="input-group-text">R$</span>
                                <input type="number" class="form-control" id="valor" name="valor" step="0.01" min="0.01" required>
                            </div>
                            <div class="invalid-feedback">Por favor, insira um valor válido.</div>
                        </div>

                        <!-- Data -->
                        <div class="mb-3">
                            <label for="data_transferencia" class="form-label">Data da Transferência</label>
                            <input type="date" class="form-control" id="data_transferencia" name="data_transferencia" required>
                            <div class="invalid-feedback">Por favor, selecione a data da transferência.</div>
                        </div>

                        <!-- Descrição -->
                        <div class="mb-3">
                            <label for="descricao" class="form-label">Descrição (opcional)</label>
                            <textarea class="form-control" id="descricao" name="descricao" rows="2"></textarea>
                        </div>

                        <!-- Botões -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="/transferencias" class="btn btn-outline-secondary me-md-2">Cancelar</a>
                            <button type="submit" class="btn btn-primary" id="submitBtn">Criar Transferência</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>

    <script>
        // Validação do formulário
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('.needs-validation');
            const contaOrigemSelect = document.getElementById('conta_origem_id');
            const nomeDestinoInput = document.getElementById('nome_conta_destino');
            const valorInput = document.getElementById('valor');
            const saldoOrigemDiv = document.getElementById('saldo-origem');
            const direcaoInput = document.getElementById('direcao');
            const btnEnvio = document.getElementById('btnEnvio');
            const btnRecebimento = document.getElementById('btnRecebimento');
            const labelConta = document.getElementById('labelConta');
            const labelNomeDestino = document.getElementById('labelNomeDestino');
            const hintNome = document.getElementById('hintNome');
            const submitBtn = document.getElementById('submitBtn');

            // Atualiza o saldo exibido quando a conta é selecionada
            function atualizarSaldoExibido(select, saldoDiv) {
                const option = select.options[select.selectedIndex];
                if (option.value) {
                    const saldo = parseFloat(option.dataset.saldo);
                    saldoDiv.textContent = `Saldo disponível: ${new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' }).format(saldo)}`;
                } else {
                    saldoDiv.textContent = '';
                }
            }

            contaOrigemSelect.addEventListener('change', () => {
                atualizarSaldoExibido(contaOrigemSelect, saldoOrigemDiv);
            });

            // Campo de nome do destino não possui saldo

            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                } else {
                    // Validações adicionais
                    const contaOrigem = contaOrigemSelect.value;
                    const destinoNome = nomeDestinoInput.value.trim();
                    const valor = parseFloat(valorInput.value);
                    const saldoOrigem = parseFloat(contaOrigemSelect.options[contaOrigemSelect.selectedIndex].dataset.saldo);

                    if (direcaoInput.value !== 'recebimento') {
                        if (valor > saldoOrigem) {
                            alert('O valor da transferência não pode ser maior que o saldo disponível na conta de origem.');
                            event.preventDefault();
                            return;
                        }
                    }

                    // Confirmação antes de enviar
                    const origemNome = contaOrigemSelect.options[contaOrigemSelect.selectedIndex].textContent.trim();
                    const valorFmt = new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' }).format(valor);
                    const destinoFmt = destinoNome || (direcaoInput.value === 'recebimento' ? 'Remetente não informado' : 'Destino não informado');
                    const confirmar = (direcaoInput.value === 'recebimento')
                        ? confirm(`Confirmar recebimento de ${valorFmt}\nPara: ${origemNome}\nDe: ${destinoFmt}?`)
                        : confirm(`Confirmar transferência de ${valorFmt}\nDe: ${origemNome}\nPara: ${destinoFmt}?`);
                    if (!confirmar) {
                        event.preventDefault();
                        return;
                    }
                }

                form.classList.add('was-validated');
            });

            // Define a data atual como padrão
            const dataInput = document.getElementById('data_transferencia');
            function hojeLocal() {
                const d = new Date();
                const yyyy = d.getFullYear();
                const mm = String(d.getMonth() + 1).padStart(2, '0');
                const dd = String(d.getDate()).padStart(2, '0');
                return `${yyyy}-${mm}-${dd}`;
            }
            const hoje = hojeLocal();
            dataInput.value = hoje;
            dataInput.max = hoje;

            // Alternância Enviar/Receber
            function setDirecao(tipo) {
                direcaoInput.value = tipo;
                if (tipo === 'recebimento') {
                    btnEnvio.classList.remove('btn-primary');
                    btnEnvio.classList.add('btn-outline-primary');
                    btnRecebimento.classList.remove('btn-outline-success');
                    btnRecebimento.classList.add('btn-success');
                    labelConta.textContent = 'Conta de Destino';
                    labelNomeDestino.textContent = 'Nome do Remetente (opcional)';
                    hintNome.textContent = 'Quem enviou (ex.: Banco X, João)';
                    submitBtn.textContent = 'Registrar Recebimento';
                } else {
                    btnRecebimento.classList.remove('btn-success');
                    btnRecebimento.classList.add('btn-outline-success');
                    btnEnvio.classList.remove('btn-outline-primary');
                    btnEnvio.classList.add('btn-primary');
                    labelConta.textContent = 'Conta de Origem';
                    labelNomeDestino.textContent = 'Nome do Destino (opcional)';
                    hintNome.textContent = 'Para onde foi transferido (ex.: Carteira, Banco X)';
                    submitBtn.textContent = 'Criar Transferência';
                }
                atualizarSaldoExibido(contaOrigemSelect, saldoOrigemDiv);
            }

            // Inicializa direcao a partir do query param
            const initial = direcaoInput.value === 'recebimento' ? 'recebimento' : 'envio';
            setDirecao(initial);

            btnEnvio.addEventListener('click', () => setDirecao('envio'));
            btnRecebimento.addEventListener('click', () => setDirecao('recebimento'));
        });
    </script>
</body>
</html>