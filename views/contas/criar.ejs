<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <%- include('../partials/head') %>
    <title>Nova Conta - Finansave</title>
    <style>
        .form-container {
            max-width: 600px;
            margin: 2rem auto;
            padding: 2rem;
            background: var(--surface);
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }
        .form-header {
            text-align: center;
            margin-bottom: 2rem;
        }
        .form-header h1 {
            color: var(--text-white);
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }
        .form-header p {
            color: var(--text-secondary);
        }
        .input-group-text {
            background-color: rgba(96, 165, 250, 0.12);
        }
        .form-floating > .form-control {
            padding-left: 2.5rem;
        }
        .form-floating > .form-label {
            padding-left: 2.5rem;
        }
        .icon-input {
            position: absolute;
            left: 1rem;
            top: 1.25rem;
            color: var(--text-secondary);
            z-index: 4;
        }
    </style>
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container">
        <div class="form-container">
            <div class="form-header">
                <h1>Nova Conta</h1>
                <p>Configure sua nova conta financeira de forma simples e rápida</p>
            </div>

            <%- include('../partials/messages') %>

            <form action="/contas/criar" method="POST" id="formConta">
                <!-- Nome da Conta -->
                <div class="mb-3">
                    <p class="form-question">Nome da sua conta</p>
                    <div class="input-with-icon position-relative">
                        <i class="fas fa-credit-card icon-input"></i>
                        <input type="text" class="form-control" id="nome" name="nome" 
                               placeholder="Como você quer chamar esta conta?" required>
                    </div>
                </div>

                <!-- Tipo de Conta -->
                <div class="mb-3">
                    <p class="form-question">Tipo de conta</p>
                    <div class="input-with-icon position-relative">
                        <i class="fas fa-list-alt icon-input"></i>
                        <select class="form-select" id="tipo" name="tipo" required>
                            <option value="" disabled selected>Escolha o tipo da conta</option>
                            <option value="Corrente">Conta Corrente</option>
                            <option value="Poupança">Conta Poupança</option>
                            <option value="Investimento"> Conta Investimento</option>
                            <option value="Carteira"> Carteira</option>
                            <option value="Cartão de Crédito">Cartão de Crédito</option>
                            <option value="Outro">Outro</option>
                        </select>
                    </div>
                </div>

                <!-- Saldo Inicial -->
                <div class="mb-3">
                    <p class="form-question">Saldo inicial</p>
                    <div class="input-with-icon position-relative">
                        <i class="fas fa-coins icon-input"></i>
                        <input type="number" class="form-control" id="saldo_atual" name="saldo_atual" 
                               step="0.01" placeholder="Quanto você tem nesta conta?" required>
                    </div>
                </div>

                <!-- Instituição Financeira -->
                <div class="mb-3">
                    <p class="form-question">Instituição financeira (opcional)</p>
                    <div class="input-with-icon position-relative">
                        <i class="fas fa-building icon-input"></i>
                        <input type="text" class="form-control" id="instituicao" name="instituicao" 
                               placeholder="Ex: Banco do Brasil, Nubank, etc.">
                    </div>
                </div>

                <!-- Status da Conta -->
                <div class="form-check form-switch mb-4">
                    <input class="form-check-input" type="checkbox" id="ativa" name="ativa" 
                           value="true" checked>
                    <label class="form-check-label" for="ativa">✅ Conta ativa e em uso</label>
                </div>

                <!-- Botões -->
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-plus-circle"></i> Criar Minha Conta
                    </button>
                    <a href="/contas" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Voltar
                    </a>
                </div>
            </form>
        </div>
    </div>

    <%- include('../partials/footer') %>

    <!-- Script para busca de bancos -->
    <script src="/js/banco-search.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('formConta');
            const saldoInput = document.getElementById('saldo_atual');

            // Formata o campo de saldo para exibir sempre duas casas decimais
            saldoInput.addEventListener('change', function() {
                if (this.value) {
                    this.value = parseFloat(this.value).toFixed(2);
                }
            });

            form.addEventListener('submit', function(event) {
                const nome = document.getElementById('nome').value.trim();
                const tipo = document.getElementById('tipo').value;
                
                if (nome.length < 2) {
                    event.preventDefault();
                    alert('O nome da conta deve ter pelo menos 2 caracteres!');
                    return;
                }

                if (!tipo) {
                    event.preventDefault();
                    alert('Selecione um tipo de conta!');
                    return;
                }

                const saldo = parseFloat(saldoInput.value);
                if (isNaN(saldo)) {
                    event.preventDefault();
                    alert('Informe um valor válido para o saldo!');
                    return;
                }
            });
        });
    </script>
</body>
</html>