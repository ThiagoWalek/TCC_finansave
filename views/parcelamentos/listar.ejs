<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <%- include('../partials/head') %>
    <title>Meus Parcelamentos - Finansave</title>
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3">Meus Parcelamentos</h1>
            <a href="/parcelamentos/criar" class="btn btn-primary">
                <i class="fas fa-plus"></i> Novo Parcelamento
            </a>
        </div>

        <%- include('../partials/messages') %>

        <% if (parcelamentos && parcelamentos.length > 0) { %>
            <div class="row">
                <% parcelamentos.forEach(function(parcelamento) { %>
                    <div class="col-12">
                        <div class="list-card">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h5 class="mb-1"><%= parcelamento.descricao %></h5>
                                    <div class="text-muted small">
                                        Parcela <%= parcelamento.parcela_atual %>/<%= parcelamento.total_parcelas %>
                                        • Valor da Parcela: <%= new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' }).format(parcelamento.valor_parcela) %>
                                    </div>
                                    <div class="mt-2">
                                        <% if (parcelamento.conta_status === 'inexistente') { %>
                                            <span class="chip chip-neutral" title="Conta não encontrada"><i class="fas fa-exclamation-triangle"></i> Conta não encontrada</span>
                                        <% } else if (parcelamento.conta_status === 'inativa') { %>
                                            <span class="chip chip-neutral" title="Conta inativa"><i class="fas fa-pause-circle"></i> <%= parcelamento.conta_nome %> (Inativa)</span>
                                        <% } else { %>
                                            <span class="chip chip-neutral"><i class="fas fa-university"></i> <%= parcelamento.conta_nome %></span>
                                        <% } %>
                                    </div>
                                </div>
                                <div class="text-end">
                                    <% const podePagar = parcelamento.conta_status === 'ativa' && parcelamento.parcela_atual <= parcelamento.total_parcelas; %>
                                    <% if (parcelamento.conta_status !== 'ativa') { %>
                                        <span class="chip chip-neutral" title="Conta inativa ou inexistente" aria-disabled="true">
                                            <i class="fas fa-ban" aria-hidden="true"></i> <%= parcelamento.conta_status === 'inexistente' ? 'Conta Inexistente' : 'Conta Inativa' %>
                                        </span>
                                    <% } else if (!(podePagar && parcelamento.ativo)) { %>
                                        <span class="chip chip-success" aria-disabled="true">
                                            <i class="fas fa-check" aria-hidden="true"></i> Pago
                                        </span>
                                    <% } %>
                                    <div class="mt-2">
                                        <% if (podePagar && parcelamento.ativo) { %>
                                            <form action="/parcelamentos/atualizar-parcela/<%= parcelamento.id_parcelamento %>" method="POST" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-warning me-2">Pagar</button>
                                            </form>
                                        <% } %>
                                        <a href="/parcelamentos/editar/<%= parcelamento.id_parcelamento %>" class="btn btn-sm btn-outline-primary me-2">
                                            <i class="fas fa-edit"></i> Editar
                                        </a>
                                        <form action="/parcelamentos/excluir/<%= parcelamento.id_parcelamento %>" method="POST" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Tem certeza que deseja excluir este parcelamento?')" aria-label="Excluir parcelamento">
                                                <i class="fas fa-trash-alt" aria-hidden="true"></i> Excluir
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            <div class="progress installment-progress mt-3">
                                <div class="progress-bar <%= parseFloat(parcelamento.progresso) === 100 ? 'bg-success' : 'bg-primary' %>" 
                                     role="progressbar" 
                                     style="width: <%= parcelamento.progresso %>%" 
                                     aria-valuenow="<%= parcelamento.progresso %>" 
                                     aria-valuemin="0" 
                                     aria-valuemax="100">
                                     <span class="visually-hidden">Progresso <%= parcelamento.progresso %>%</span>
                                </div>
                            </div>

                            <div class="row mt-3">
                                <div class="col-md-4">
                                    <div class="text-muted small">
                                        <strong>Valor Total:</strong><br>
                                        <%= new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' }).format(parcelamento.valor_total) %>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="text-muted small">
                                        <strong>Valor Pago:</strong><br>
                                        <%= new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' }).format(parcelamento.valor_pago) %>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="text-muted small">
                                        <strong>Valor Restante:</strong><br>
                                        <%= new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' }).format(parcelamento.valor_restante) %>
                                    </div>
                                </div>
                            </div>

                            <div class="text-muted small mt-3">
                                <i class="far fa-calendar-alt"></i> Início: <%= new Date(parcelamento.data_inicio).toLocaleDateString('pt-BR') %>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="alert alert-info" role="alert">
                <i class="fas fa-info-circle"></i> Você ainda não possui parcelamentos registrados.
            </div>
        <% } %>
    </div>

    <%- include('../partials/footer') %>
</body>
</html>