<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <%- include('../partials/head') %>
    <title>Editar Parcelamento - Finansave</title>
    
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container form-page">
        <div class="form-card animate__animated animate__fadeInUp">
            <div class="form-header">
                <h1 class="form-title gradient-text">Editar Parcelamento</h1>
                <p class="form-subtitle">Atualize as informações do seu parcelamento</p>
            </div>

            <%- include('../partials/messages') %>

            <form action="/parcelamentos/editar/<%= parcelamento.id_parcelamento %>" method="POST" id="formParcelamento">
                <!-- Conta -->
                <div class="form-floating mb-3 input-with-icon">
                    <i class="fas fa-university icon-input" aria-hidden="true"></i>
                    <select class="form-select" id="conta_id" name="conta_id" required>
                        <option value="" disabled>Selecione a conta</option>
                        <% contas.forEach(function(conta) { %>
                            <option value="<%= conta.conta_id %>" <%= conta.conta_id === parcelamento.conta_id ? 'selected' : '' %>>
                                <%= conta.nome %> - Saldo: R$ <%= parseFloat(conta.saldo_atual).toFixed(2).replace('.', ',') %>
                            </option>
                        <% }); %>
                    </select>
                    <label for="conta_id">Conta para débito das parcelas</label>
                </div>

                <!-- Nome da Parcela -->
                <div class="form-floating mb-3 input-with-icon">
                    <i class="fas fa-file-signature icon-input" aria-hidden="true"></i>
                    <input type="text" class="form-control" id="descricao" name="descricao" 
                           placeholder="Nome da parcela" value="<%= parcelamento.descricao %>" required>
                    <label for="descricao">Nome da parcela</label>
                </div>

                <!-- Total de Parcelas -->
                <div class="form-floating mb-3 input-with-icon">
                    <i class="fas fa-list-ol icon-input" aria-hidden="true"></i>
                    <input type="number" class="form-control" id="total_parcelas" name="total_parcelas" 
                           placeholder="Total de parcelas" min="1" value="<%= parcelamento.total_parcelas %>" required>
                    <label for="total_parcelas">Total de parcelas</label>
                </div>

                <!-- Parcela Atual -->
                <div class="form-floating mb-3 input-with-icon">
                    <i class="fas fa-tasks icon-input" aria-hidden="true"></i>
                    <input type="number" class="form-control" id="parcela_atual" name="parcela_atual" 
                           placeholder="Parcela atual" min="1" max="<%= parcelamento.total_parcelas %>" value="<%= parcelamento.parcela_atual %>" required>
                    <label for="parcela_atual">Parcela atual</label>
                </div>

                <!-- Valor Total -->
                <div class="form-floating mb-3 input-with-icon">
                    <i class="fas fa-dollar-sign icon-input" aria-hidden="true"></i>
                    <input type="number" class="form-control" id="valor_total" name="valor_total" 
                           placeholder="Valor total" min="0.01" step="0.01" value="<%= parcelamento.valor_total %>" required>
                    <label for="valor_total">Valor total (R$)</label>
                </div>

                <!-- Data de Início -->
                <div class="form-floating mb-3 input-with-icon">
                    <i class="fas fa-calendar-alt icon-input" aria-hidden="true"></i>
                    <input type="date" class="form-control" id="data_inicio" name="data_inicio" 
                           value="<%= String(parcelamento.data_inicio).slice(0,10) %>" required>
                    <label for="data_inicio">Data de início</label>
                </div>

                <!-- Informações Calculadas -->
                <div class="alert alert-info mb-3">
                    <div id="valor_parcela_calculado">Valor por parcela: R$ <%= parseFloat(parcelamento.valor_parcela).toFixed(2) %></div>
                    <div>Valor pago: R$ <%= (parcelamento.parcela_atual * parcelamento.valor_parcela).toFixed(2) %></div>
                    <div>Valor restante: R$ <%= ((parcelamento.total_parcelas - parcelamento.parcela_atual) * parcelamento.valor_parcela).toFixed(2) %></div>
                    <div>Progresso: <%= ((parcelamento.parcela_atual / parcelamento.total_parcelas) * 100).toFixed(2) %>%</div>
                </div>

                <!-- Botões de Ação -->
                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                    <a href="/parcelamentos" class="btn btn-outline-secondary me-md-2">
                        <i class="fas fa-times"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Salvar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Calcula o valor da parcela quando o usuário preenche os campos
            const totalParcelasInput = document.getElementById('total_parcelas');
            const valorTotalInput = document.getElementById('valor_total');
            const parcelaAtualInput = document.getElementById('parcela_atual');
            
            function calcularValorParcela() {
                const totalParcelas = parseFloat(totalParcelasInput.value);
                const valorTotal = parseFloat(valorTotalInput.value);
                const parcelaAtual = parseFloat(parcelaAtualInput.value);
                
                if (totalParcelas > 0 && valorTotal > 0) {
                    const valorParcela = (valorTotal / totalParcelas).toFixed(2);
                    document.getElementById('valor_parcela_calculado').textContent = `Valor por parcela: R$ ${valorParcela}`;
                    
                    if (parcelaAtual > 0 && parcelaAtual <= totalParcelas) {
                        const valorPago = (parcelaAtual * valorParcela).toFixed(2);
                        const valorRestante = ((totalParcelas - parcelaAtual) * valorParcela).toFixed(2);
                        const progresso = ((parcelaAtual / totalParcelas) * 100).toFixed(2);
                        
                        document.querySelector('.alert-info').innerHTML = `
                            <div id="valor_parcela_calculado">Valor por parcela: R$ ${valorParcela}</div>
                            <div>Valor pago: R$ ${valorPago}</div>
                            <div>Valor restante: R$ ${valorRestante}</div>
                            <div>Progresso: ${progresso}%</div>
                        `;
                    }
                }
                
                // Atualiza o valor máximo do campo parcela_atual
                parcelaAtualInput.max = totalParcelas;
                if (parseInt(parcelaAtualInput.value) > parseInt(totalParcelas)) {
                    parcelaAtualInput.value = totalParcelas;
                }
            }
            
            totalParcelasInput.addEventListener('input', calcularValorParcela);
            valorTotalInput.addEventListener('input', calcularValorParcela);
            parcelaAtualInput.addEventListener('input', calcularValorParcela);
        });
    </script>
</body>
</html>