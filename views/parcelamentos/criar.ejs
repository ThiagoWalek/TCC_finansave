<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <%- include('../partials/head') %>
    <title>Novo Parcelamento - Finansave</title>
    <style>
        .form-container {
            max-width: 600px;
            margin: 2rem auto;
            padding: 2rem;
            background: var(--surface);
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }
        .form-header {
            text-align: center;
            margin-bottom: 2rem;
        }
        .form-header h1 {
            color: var(--text-white);
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }
        .form-header p {
            color: var(--text-secondary);
        }
        .input-group-text {
            background-color: rgba(96, 165, 250, 0.12);
        }
        .form-floating > .form-control {
            padding-left: 2.5rem;
        }
        .form-floating > .form-label {
            padding-left: 2.5rem;
        }
        .icon-input {
            position: absolute;
            left: 1rem;
            top: 1.25rem;
            color: var(--text-secondary);
            z-index: 4;
        }
    </style>
</head>
<body class="bg-light">
    <%- include('../partials/navbar') %>

    <div class="container">
        <div class="form-container">
            <div class="form-header">
                <h1>Novo Parcelamento</h1>
                <p>Registre um novo parcelamento para acompanhar</p>
            </div>

            <%- include('../partials/messages') %>

            <form action="/parcelamentos/criar" method="POST" id="formParcelamento">
                <!-- Conta -->
                <div class="mb-3">
                    <p class="form-question">Qual conta será debitada?</p>
                    <div class="input-with-icon position-relative">
                        <i class="fas fa-university icon-input"></i>
                        <select class="form-select" id="conta_id" name="conta_id" required>
                            <option value="" disabled selected>Selecione a conta</option>
                            <% contas.forEach(function(conta) { %>
                                <option value="<%= conta.conta_id %>">
                                    <%= conta.nome %> - Saldo: R$ <%= parseFloat(conta.saldo_atual).toFixed(2).replace('.', ',') %>
                                </option>
                            <% }); %>
                        </select>
                    </div>
                </div>

                <!-- Nome da Parcela -->
                <div class="mb-3">
                    <p class="form-question">Qual é o nome da parcela?</p>
                    <div class="input-with-icon position-relative">
                        <i class="fas fa-file-signature icon-input"></i>
                        <input type="text" class="form-control" id="descricao" name="descricao" 
                               placeholder="Nome da parcela" required>
                    </div>
                </div>

                <!-- Total de Parcelas -->
                <div class="mb-3">
                    <p class="form-question">Quantas parcelas?</p>
                    <div class="input-with-icon position-relative">
                        <i class="fas fa-list-ol icon-input"></i>
                        <input type="number" class="form-control" id="total_parcelas" name="total_parcelas" 
                               placeholder="Total de parcelas" min="1" required>
                    </div>
                </div>

                <!-- Valor Total -->
                <div class="mb-3">
                    <p class="form-question">Qual o valor total?</p>
                    <div class="input-with-icon position-relative">
                        <i class="fas fa-dollar-sign icon-input"></i>
                        <input type="number" class="form-control" id="valor_total" name="valor_total" 
                               placeholder="Valor total" min="0.01" step="0.01" required>
                    </div>
                </div>

                <!-- Data de Início -->
                <div class="mb-3">
                    <p class="form-question">Quando inicia o parcelamento?</p>
                    <div class="input-with-icon position-relative">
                        <i class="fas fa-calendar-alt icon-input"></i>
                        <input type="date" class="form-control" id="data_inicio" name="data_inicio" required>
                    </div>
                </div>

                <!-- Botões de Ação -->
                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                    <a href="/parcelamentos" class="btn btn-outline-secondary me-md-2">
                        <i class="fas fa-times"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Salvar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Define a data de hoje como valor padrão para o campo de data (parsing local)
            function hojeLocal() {
                const d = new Date();
                const yyyy = d.getFullYear();
                const mm = String(d.getMonth() + 1).padStart(2, '0');
                const dd = String(d.getDate()).padStart(2, '0');
                return `${yyyy}-${mm}-${dd}`;
            }
            document.getElementById('data_inicio').value = hojeLocal();
            
            // Calcula o valor da parcela quando o usuário preenche os campos
            const totalParcelasInput = document.getElementById('total_parcelas');
            const valorTotalInput = document.getElementById('valor_total');
            
            function calcularValorParcela() {
                const totalParcelas = parseFloat(totalParcelasInput.value);
                const valorTotal = parseFloat(valorTotalInput.value);
                
                if (totalParcelas > 0 && valorTotal > 0) {
                    const valorParcela = (valorTotal / totalParcelas).toFixed(2);
                    document.getElementById('valor_parcela_calculado').textContent = `Valor por parcela: R$ ${valorParcela}`;
                }
            }
            
            totalParcelasInput.addEventListener('input', calcularValorParcela);
            valorTotalInput.addEventListener('input', calcularValorParcela);
        });
    </script>
</body>
</html>