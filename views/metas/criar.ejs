<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <%- include('../partials/head') %>
    <title>Nova Meta - Finansave</title>
    <style>
        .form-container {
            max-width: 600px;
            margin: 2rem auto;
            padding: 2rem;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }
        .form-header {
            text-align: center;
            margin-bottom: 2rem;
        }
        .form-header h1 {
            color: #0d6efd;
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }
        .form-header p {
            color: #6c757d;
        }
        .input-group-text {
            background-color: #f8f9fa;
        }
        .form-floating > .form-control {
            padding-left: 2.5rem;
        }
        .form-floating > .form-label {
            padding-left: 2.5rem;
        }
        .icon-input {
            position: absolute;
            left: 1rem;
            top: 1.25rem;
            color: #6c757d;
            z-index: 4;
        }
    </style>
</head>
<body class="bg-light">
    <%- include('../partials/navbar') %>

    <div class="container">
        <div class="form-container">
            <div class="form-header">
                <h1>Nova Meta</h1>
                <p>Defina sua nova meta financeira</p>
            </div>

            <%- include('../partials/messages') %>

            <form action="/metas/criar" method="POST" id="formMeta">
                <!-- Nome da Meta -->
                <div class="mb-3">
                    <p class="form-question">🎯 Qual é o seu objetivo?</p>
                    <div class="input-with-icon position-relative">
                        <i class="fas fa-star icon-input"></i>
                        <input type="text" class="form-control" id="nome" name="nome" 
                               placeholder="Ex: Viagem para Europa, Carro novo..." required>
                    </div>
                </div>

                <!-- Descrição -->
                <div class="mb-3">
                    <p class="form-question">📝 Descrição detalhada (opcional)</p>
                    <div class="input-with-icon position-relative">
                        <i class="fas fa-edit icon-input"></i>
                        <textarea class="form-control" id="descricao" name="descricao" 
                                  placeholder="Descreva detalhes sobre sua meta..." style="height: 100px"></textarea>
                    </div>
                </div>

                <!-- Valor Alvo -->
                <div class="mb-3">
                    <p class="form-question">🎯 Quanto você quer juntar?</p>
                    <div class="input-with-icon position-relative">
                        <i class="fas fa-trophy icon-input"></i>
                        <input type="number" class="form-control" id="valor_alvo" name="valor_alvo" 
                               step="0.01" placeholder="Ex: 5000.00" min="0.01" required>
                    </div>
                </div>

                <!-- Valor Inicial -->
                <div class="mb-3">
                    <p class="form-question">💰 Quanto você já tem?</p>
                    <div class="input-with-icon position-relative">
                        <i class="fas fa-coins icon-input"></i>
                        <input type="number" class="form-control" id="valor_inicial" name="valor_inicial" 
                               step="0.01" placeholder="Ex: 500.00" min="0" value="0">
                    </div>
                </div>

                <!-- Data de Início -->
                <div class="mb-3">
                    <p class="form-question">📅 Quando você vai começar?</p>
                    <div class="input-with-icon position-relative">
                        <i class="fas fa-play-circle icon-input"></i>
                        <input type="date" class="form-control" id="data_inicio" name="data_inicio" required>
                    </div>
                </div>

                <!-- Data Limite -->
                <div class="mb-3">
                    <p class="form-question">🏁 Até quando você quer alcançar?</p>
                    <div class="input-with-icon position-relative">
                        <i class="fas fa-flag-checkered icon-input"></i>
                        <input type="date" class="form-control" id="data_limite" name="data_limite" required>
                    </div>
                </div>

                <!-- Botões -->
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Criar Meta
                    </button>
                    <a href="/metas" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Voltar
                    </a>
                </div>
            </form>
        </div>
    </div>

    <%- include('../partials/footer') %>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('formMeta');
            const valorAlvoInput = document.getElementById('valor_alvo');
            const valorInicialInput = document.getElementById('valor_inicial');
            const dataInicioInput = document.getElementById('data_inicio');
            const dataLimiteInput = document.getElementById('data_limite');

            // Define a data de hoje como data mínima
            const hoje = new Date().toISOString().split('T')[0];
            dataInicioInput.value = hoje;
            dataInicioInput.min = hoje;
            dataLimiteInput.min = hoje;

            // Formata os campos de valor para exibir sempre duas casas decimais
            [valorAlvoInput, valorInicialInput].forEach(input => {
                input.addEventListener('change', function() {
                    if (this.value) {
                        this.value = parseFloat(this.value).toFixed(2);
                    }
                });
            });

            // Atualiza a data limite mínima quando a data de início é alterada
            dataInicioInput.addEventListener('change', function() {
                dataLimiteInput.min = this.value;
                if (dataLimiteInput.value && dataLimiteInput.value < this.value) {
                    dataLimiteInput.value = this.value;
                }
            });

            form.addEventListener('submit', function(event) {
                const nome = document.getElementById('nome').value.trim();
                const valorAlvo = parseFloat(valorAlvoInput.value);
                const valorInicial = parseFloat(valorInicialInput.value);
                const dataInicio = new Date(dataInicioInput.value);
                const dataLimite = new Date(dataLimiteInput.value);
                
                if (nome.length < 2) {
                    event.preventDefault();
                    alert('O nome da meta deve ter pelo menos 2 caracteres!');
                    return;
                }

                if (isNaN(valorAlvo) || valorAlvo <= 0) {
                    event.preventDefault();
                    alert('O valor alvo deve ser maior que zero!');
                    return;
                }

                if (isNaN(valorInicial) || valorInicial < 0) {
                    event.preventDefault();
                    alert('O valor inicial não pode ser negativo!');
                    return;
                }

                if (valorInicial > valorAlvo) {
                    event.preventDefault();
                    alert('O valor inicial não pode ser maior que o valor alvo!');
                    return;
                }

                if (dataLimite <= dataInicio) {
                    event.preventDefault();
                    alert('A data limite deve ser posterior à data de início!');
                    return;
                }
            });
        });
    </script>
</body>
</html>