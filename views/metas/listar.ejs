<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <%- include('../partials/head') %>
    <title>Minhas Metas - Finansave</title>
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container py-4">
        <!-- Cabeçalho -->
        <div class="goals-header">
            <h1 class="h3 mb-4">Minhas Metas Financeiras</h1>
            <p class="mb-2">Acompanhe o progresso das suas metas</p>
            <div class="goals-summary">
                <div class="row text-center">
                    <div class="col-md-4">
                        <div class="summary-item">
                            <h4 class="text-primary"><%= metas.length %></h4>
                            <p class="text-muted">Total de Metas</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="summary-item">
                            <h4 class="text-success"><%= metas.filter(m => m.status === 'Concluída').length %></h4>
                            <p class="text-muted">Concluídas</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="summary-item">
                            <h4 class="text-warning"><%= metas.filter(m => m.status === 'Em Progresso').length %></h4>
                            <p class="text-muted">Em Progresso</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('../partials/messages') %>

        <!-- Botão Adicionar Meta -->
        <div class="mb-4 text-end">
            <a href="/metas/criar" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nova Meta
            </a>
        </div>

        <!-- Lista de Metas -->
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <% metas.forEach(function(meta) { %>
                <div class="col">
                    <div class="card goal-card h-100">
                        <!-- Status da Meta -->
                        <div class="goal-status">
                            <% if(meta.status === 'Concluída') { %>
                                <span class="badge bg-success">Concluída</span>
                            <% } else if(meta.status === 'Em Progresso') { %>
                                <span class="badge bg-warning">Em Progresso</span>
                            <% } else { %>
                                <span class="badge bg-secondary">Pausada</span>
                            <% } %>
                        </div>

                        <div class="card-body">
                            <!-- Nome da Meta -->
                            <h5 class="card-title mb-3"><%= meta.nome %></h5>

                            <!-- Progresso -->
                            <div class="goal-progress mb-3">
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="goal-amount">
                                        <%= new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' }).format(meta.valor_atual || 0) %>
                                    </span>
                                    <span class="goal-target">
                                        <%= new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' }).format(meta.valor_alvo) %>
                                    </span>
                                </div>
                                <div class="progress">
                                    <% 
                                        const alvo = parseFloat(meta.valor_alvo || 0);
                                        const atual = parseFloat(meta.valor_atual || 0);
                                        const progresso = alvo > 0 ? Math.min((atual / alvo) * 100, 100) : 0;
                                        let progressClass = 'bg-danger';
                                        if (progresso >= 75) progressClass = 'bg-success';
                                        else if (progresso >= 50) progressClass = 'bg-warning';
                                        else if (progresso >= 25) progressClass = 'bg-info';
                                    %>
                                    <div class="progress-bar <%= progressClass %>" 
                                         role="progressbar" 
                                         style="width: <%= progresso %>%" 
                                         aria-valuenow="<%= progresso %>" 
                                         aria-valuemin="0" 
                                         aria-valuemax="100">
                                        <%= Math.round(progresso) %>%
                                    </div>
                                </div>
                            </div>

                            <!-- Data Limite -->
                            <% if(meta.data_limite) { %>
                                <p class="goal-date mb-3">
                                    <i class="fas fa-calendar-alt"></i>
                                    Prazo: <%= new Date(meta.data_limite).toLocaleDateString('pt-BR') %>
                                </p>
                            <% } %>

                            <!-- Descrição -->
                            <% if(meta.descricao) { %>
                                <p class="text-muted small mb-3"><%= meta.descricao %></p>
                            <% } %>

                            <!-- Ações -->
                            <div class="goal-actions">
                                <div class="btn-group w-100" role="group">
                                    <a href="/metas/editar/<%= meta.meta_id %>" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-edit"></i> Editar
                                    </a>
                                    <button type="button" class="btn btn-outline-success btn-sm" onclick="adicionarValor('<%= meta.meta_id %>', '<%= meta.nome %>')">
                                        <i class="fas fa-plus"></i> Adicionar
                                    </button>
                                    <button type="button" class="btn btn-outline-danger btn-sm" onclick="confirmarExclusao('<%= meta.meta_id %>', '<%= meta.nome %>')">
                                        <i class="fas fa-trash"></i> Excluir
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>

            <% if(metas.length === 0) { %>
                <div class="col-12">
                    <div class="text-center py-5">
                        <i class="fas fa-bullseye fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">Nenhuma meta cadastrada</h4>
                        <p class="text-muted">Comece definindo suas metas financeiras.</p>
                        <a href="/metas/criar" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Criar Primeira Meta
                        </a>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

    <%- include('../partials/footer') %>

    <!-- Modal para adicionar valor -->
    <div class="modal fade" id="modalAdicionarValor" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Adicionar Valor à Meta</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="formAdicionarValor" method="POST">
                    <div class="modal-body">
                        <div class="form-floating mb-3">
                            <input type="number" class="form-control" id="valorAdicionar" name="valor" step="0.01" min="0.01" required>
                            <label for="valorAdicionar">Valor a adicionar (R$)</label>
                        </div>
                        <div class="form-floating mb-3">
                            <textarea class="form-control" id="observacoes" name="observacoes" style="height: 100px"></textarea>
                            <label for="observacoes">Observações (opcional)</label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-success">Adicionar Valor</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        function adicionarValor(metaId, nomeMeta) {
            document.getElementById('formAdicionarValor').action = `/metas/${metaId}/adicionar-valor`;
            document.querySelector('#modalAdicionarValor .modal-title').textContent = `Adicionar Valor - ${nomeMeta}`;
            new bootstrap.Modal(document.getElementById('modalAdicionarValor')).show();
        }

        function confirmarExclusao(metaId, nomeMeta) {
            if (confirm(`Tem certeza que deseja excluir a meta "${nomeMeta}"? Esta ação não pode ser desfeita.`)) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = `/metas/excluir/${metaId}`;
                
                const methodInput = document.createElement('input');
                methodInput.type = 'hidden';
                methodInput.name = '_method';
                methodInput.value = 'DELETE';
                form.appendChild(methodInput);
                
                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
</body>
</html>