<!-- Script para confirmar ações de exclusão -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const confirmarExclusao = function(event) {
            if (!confirm('Tem certeza que deseja excluir este item?')) {
                event.preventDefault();
            }
        };

        // Adiciona confirmação a todos os formulários de exclusão
        document.querySelectorAll('form[action*="excluir"]').forEach(function(form) {
            form.addEventListener('submit', confirmarExclusao);
        });

        // Adiciona confirmação a todos os links de exclusão
        document.querySelectorAll('a[href*="excluir"]').forEach(function(link) {
            link.addEventListener('click', confirmarExclusao);
        });
    });
</script>